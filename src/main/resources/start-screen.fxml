<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" fx:controller="Frontend.StartScreenController">
    <VBox alignment="CENTER" layoutX="150.0" layoutY="100.0" prefWidth="300.0" spacing="20.0">
        <Label text="Welcome to the System" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Please select your role to proceed" style="-fx-font-size: 16px;" />
        <HBox alignment="CENTER" spacing="30.0">
            <Button fx:id="adminButton" text="Admin" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10 20;" />
            <Button fx:id="employeeButton" text="Employee" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 20;" />
        </HBox>
    </VBox>
</AnchorPane>
